
name: Test

on:
  push:
    branches:
      - main  # Change this to your main branch

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout Repository
      uses: actions/checkout@v2

    - name: Set up Node.js
      uses: actions/setup-node@v3
      with:
        node-version: '14'

    - name: Retrieve Secret and Set as Environment Variable
      run: |
        echo "API_KEY=${{ secrets.TEST_API_KEY }}" >> $GITHUB_ENV

    - name: Your Deployment Step
      run: |
        # Use $API_KEY in your deployment process
        # For example, if you're using Node.js:
        # export API_KEY=$API_KEY
        # node deploy-script.js
        # test test
